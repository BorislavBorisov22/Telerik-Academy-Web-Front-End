{{#if this.length}}
<div class="row">
    <div class="col-sm-4">
        <div class="form-group">
            <label class="text-info" for="sel1">Sort posts by:</label>
            <button  class="btn btn-primary" id="sort-posts-by-default">Default</button>                    
            <button class="btn btn-primary" id="sort-posts-by-title">Title</button>
            <button  class="btn btn-primary" id="sort-posts-by-date">Date</button>        
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-2">
         <label class="text-info" for="descending">Descending</label>
         <input id="descending" type="checkbox">
    </div>
</div>
<div class="row">
    <div class="col-sm-4">
        <div class="form-group">
            <label class="text-info" for="sel1">Select items per page:</label>
        <select id="page-size-select" class="form-control" id="sel1">
            <option class="p-size">4</option>
            <option class="p-size">8</option>
            <option class="p-size">12</option>
            <option class="p-size">16</option>
        </select>
</div>
    </div>
</div>
<div class="row text-center">
    <div class="col-sm-12"><h1 class="text-success col-sm-4">Shared By The Crowd</h1></div>
</div>
{{#each this}}
<div class="row text-center">
    <div class="col-sm-4">
        <h3>{{title}}</h3>
    <p>{{body}}</p>
    </div>
</div>

<div class="row text-center">
    <div class="col-sm-4">
         <span>Posted on: {{postDate}} by <a href="#">{{user.username}}</a></span>
    </div>
</div>
{{/each}}
<div class="row">
    <div class="col-sm-12">
            <ul class="pagination">
            <li><a id="prev-page" href="#/home">Prev</a></li>
            <li><a id="next-page" href="#/home">Next</a></li>
        </ul>
    </div>
</div>
 
{{else}}
<h1 class="text-success col-sm-4">No posts shared...</h1>
{{/if}}